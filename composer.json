{
    "name": "zahfouf/php-libreoffice",
    "description": "Framework-agnostic LibreOffice headless document conversion library for PHP.",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.1 || ^7.0",
        "symfony/process": "^6.1 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "symfony/var-exporter": "^6.1 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "LibreOffice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LibreOffice\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/libreoffice"
    ],
    "scripts": {
        "test": "phpunit -c phpunit.xml.dist"
    }
}
